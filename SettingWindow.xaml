<Window x:Class="Deepseek_Desktop_App.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deepseek_Desktop_App"
        mc:Ignorable="d"
        Title="应用设置" Height="600" Width="900" ResizeMode="NoResize" Loaded="Window_Loaded">

    <Viewbox>
        <Grid>
            
            <Label Margin="40,0,200,350" Width="350" Height="25" Content="API key" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,0,200,318" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="APIkey"></TextBox>

            <Label Margin="40,0,200,250" Width="350" Height="25" Content="API url" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,0,200,218" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="APIurl"></TextBox>

            <Label Margin="40,0,200,150" Width="350" Height="25" Content="模型" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,0,200,118" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="model"></TextBox>
            
            <Label Margin="40,0,200,50" Width="350" Height="25" Content="max__tokens" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,0,200,18" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="max_tokens"></TextBox>

            <Label Margin="40,50,200,0" Width="350" Height="25" Content="temperature" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,78,200,0" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="temperature"></TextBox>

            <Label Margin="40,150,200,0" Width="350" Height="25" Content="聊天字体大小" FontSize="8" BorderThickness="0" FontWeight="Black"></Label>
            <TextBox Margin="40,178,200,0" Width="350" Height="20" BorderThickness="0.5" BorderBrush="Black" Text="" Name="ChatFontSize"></TextBox>

            <Button Margin="300,250,200,0" Width="50" Height="25" Content="应用" Name="Ok" Click="Ok_Click"></Button>
            <Button Margin="190,250,200,0" Width="50" Height="25" Content="取消" Name="Cancle" Click="Cancle_Click"></Button>




        </Grid>
    </Viewbox>
</Window>
